# PostgreSQL Configuration
POSTGRES_IMAGE=postgres:17-alpine
POSTGRES_SUPERUSER=postgres
POSTGRES_SUPERPASS=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_IMAGE=redis:7-alpine
REDIS_PASSWORD=redis_password
REDIS_PORT=6379

# Traefik Configuration
TRAEFIK_IMAGE=traefik:v2.10
TRAEFIK_HTTP_PORT=80
TRAEFIK_HTTPS_PORT=443
TRAEFIK_DASHBOARD_PORT=8080

# Database Connection Strings (for services)
# User Service
USER_DB_HOST=postgres
USER_DB_PORT=5432
USER_DB_NAME=user_service
USER_DB_USER=user_service
USER_DB_PASSWORD=user_service_pwd

# Product Service
PRODUCT_DB_HOST=postgres
PRODUCT_DB_PORT=5432
PRODUCT_DB_NAME=product_service
PRODUCT_DB_USER=product_service
PRODUCT_DB_PASSWORD=product_service_pwd

# Redis Connection
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# Service Ports
USER_SERVICE_HTTP_PORT=8005
USER_SERVICE_GRPC_PORT=9005
PRODUCT_SERVICE_HTTP_PORT=8010

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=1h

# Environment
ENV=development

